{
  "dependencies": {
    "express": "^4.21.1",
    "jest": "^29.7.0",
    "mongoose": "^8.7.1",
    "supertest": "^7.0.0"
  },
  "jest": {
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    }
  },
  "scripts": {
    "start": "node src/server.js",
    "test": "jest --coverage"
  }
}
